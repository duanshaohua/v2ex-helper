{
  "name": "V2EX HELPER",
  "manifest_version": 2,
  "version": "1.0",
  "description": "the way to make v2ex better",
  // "icons": { "128": "icon_128.png" },  

  "browser_action": {
    "default_title": "",
    "default_icon": "v2ex.png",
    "default_popup": "popup.html" 
  },
  
  "background": {
    "scripts": ["js/background.js"] // 或者设置项为 background.html，然后在它那引入 background.js
  },
  
  // "options_ui": {
  //   "page": "options.html"
  // },

  "options_page": "options.html",

  "permissions": [
    "tabs",
    "*://cdn.bootcss.com/*"
  ],

  "content_scripts": 
    [
      {
        //"matches": ["http://*/*", "https://*/*"],
        // "<all_urls>" 表示匹配所有地址
        "matches": ["*://www.v2ex.com/*"],
        // 多个 JS 按顺序注入
        // ================== //
        // DONE
        // 消息回复跳到指定楼层
        // ================== //
        // TODO
        // 主题图床
        // 回复图床
        // 对话详情（参考知乎）
        // 主题图片点击放大
        "js": [
          "lib/js/jquery.min.js"
          , "lib/js/bootstrap.min.js"
          , "lib/js/zoom.min.js"
          , "js/content.js" // 核心
          , "js/pages/go2reply.js" // 消息回复跳到指定楼层
          , "js/pages/zoom.js"
        ],
        "css": [
          "css/zoom.css"
        ],
        // JS 的注入可以随便一点，但是 CSS 的注入就要千万小心了，因为一不小心就可能影响全局样式
        // 代码注入的时间，可选值： "document_start", "document_end", or "document_idle"，最后一个表示页面空闲时，默认document_idle
        "run_at": "document_start"
      }
    ]
}